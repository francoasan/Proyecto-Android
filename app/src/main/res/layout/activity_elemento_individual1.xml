<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".elementoIndividual1"
    android:background="@drawable/fondo_hp_3"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/primary_layout"
        />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry Potter y la piedra filosofal"
        android:textSize="50sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:background="#FFFFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Año de estreno: 2001"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duración: 152 minutos"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director: Chris Columbus"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actores principales:"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/danielradcliffe"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/rupertgrint"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/emmawatson"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Daniel Radcliffe"
            android:textSize="20sp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Rupert Grint"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Emma Watson"
            android:textSize="20sp"
            android:textAlignment="center"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnVolverAElementos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Volver"
        android:textColorHint="#FFFFFF"
        android:gravity="center"
        android:layout_gravity="center"
        />
</LinearLayout>